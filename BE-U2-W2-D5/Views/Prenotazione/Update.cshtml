

<h1>Modifica Prenotazione</h1>

<form asp-controller="Prenotazione" asp-action="Update" method="post">
    <input type="hidden" name="IdPrenotazione" value="@ViewBag.Prenotazione.IdPrenotazione" />
    <div class="mb-2">
        <label for="Cliente">Seleziona il Cliente:</label>
        <select class="form-select" aria-label="Default select example" name="ClienteId" value="">
            <option>Seleziona il Cliente</option>
            @foreach (BE_U2_W2_D5.Models.Entities.Cliente cliente in ViewBag.Clienti)
            {
                <option value="@cliente.IdCliente"
                        selected="@(cliente.IdCliente == ViewBag.Prenotazione.ClienteId)">
                    @cliente.Nome @cliente.Cognome
                </option>
            }

        </select>
    </div>

    <div class="mb-2">
        <label for="Camera">Seleziona la Camera:</label>
        <select class="form-select" aria-label="Default select example" name="CameraId" value="">
            <option>Seleziona la Camera</option>
            @foreach (BE_U2_W2_D5.Models.Entities.Camera camera in ViewBag.Camere)
            {
                <option value="@camera.IdCamera" selected="@(camera.IdCamera == ViewBag.Prenotazione.CameraId)">
                    @camera.Numero @camera.Tipo
                </option>
            }

        </select>
    </div>

    <div class="mb-2">
        <label for="DataInizio">Data Inizio Prenotazione:</label>
        <input type="datetime-local" name="DataInizio" value="@ViewBag.Prenotazione.DataInizio.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="mb-2">
        <label for="DataFine">Data Fine Prenotazione:</label>
        <input type="datetime-local" name="DataFine" value="@ViewBag.Prenotazione.DataFine.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="mb-2">
        <label for="Stato">Seleziona lo Stato della Prenotazione:</label>
        <select class="form-select" aria-label="Default select example" name="Stato" value="">
            <option>Seleziona lo stato della Prenotazione</option>
            <option value="Confermata" selected="@(ViewBag.Prenotazione.Stato == "Confermata")">Confermata</option>
            <option value="In Attesa" selected="@(ViewBag.Prenotazione.Stato == "In Attesa")">In Attesa</option>
            <option value="Annullata" selected="@(ViewBag.Prenotazione.Stato == "Annullata")">Annullata</option>

        </select>
    </div>


    <button type="submit" class="btn btn-primary">Modifica Prenotazione</button>
</form>